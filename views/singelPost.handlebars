<!-- Postes  -->
<section class="p-5" data-post="{{id}}">
  <div class="container">
    <div class="row text-center g-4">
      <div class="col-md">
        <div class="card mb-4 bg-light">
          <h3 class="card-title p-3 text-start">{{title}}</h3>
          <p class="text-start px-4">wirtin by
            <span>{{user.username}}</span>
          </p>
          <p class="text-start px-4">Creatad Date: {{format_date createdAt}}</p>
          <p class="card-text text-start px-4">
            {{content}}
          </p>
          <hr />
          <div class="commentPost">
            <h4 class="text-start px-4">Comments</h4>
            {{#each comments}}
            <p class="text-start p-2"><span>{{user.username}}:
              </span>{{comments_text}}</p>
              <hr>
            {{/each}}
            <div class="input-group mb-3 px-2">
              <input type="text" class="form-control" placeholder="add your comment" id="newComm" />
              <button class="btn btn-outline-secondary" type="button" id="addComment" data-post='{{id}}'>Send</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="/js/comment.js"></script>